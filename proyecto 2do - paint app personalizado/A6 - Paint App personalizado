<div class="controls">
  <button class="color-btn" style="background-color: red;" onclick="setColor('red')"></button>
  <button class="color-btn" style="background-color: blue;" onclick="setColor('blue')"></button>
  <button class="color-btn" style="background-color: green;" onclick="setColor('green')"></button>
  <button class="color-btn" style="background-color: orange;" onclick="setColor('orange')"></button>
  <button class="color-btn" style="background-color: purple;" onclick="setColor('purple')"></button>
  <br><br>
  <button onclick="setLineWidth(2)">Fino</button>
  <button onclick="setLineWidth(5)">Medio</button>
  <button onclick="setLineWidth(10)">Grueso</button>
  <br><br>
  <button onclick="clearCanvas()" style="background-color: #ff4444; color: white;">ðŸ§¹ Borrar todo</button>
